# Define variables
LOGS_DIR=/fast/najroldi/logs/algoperf
EXE=/home/najroldi/algorithmic-efficiency/exp/unified/lawa_final/condor/auto_run_array.sh

# Job specific vars
dataset=criteo1tb
workload=criteo1tb
search_space=exp/unified/lawa_final/json/trial_5.json

# Submission
