# Define variables
LOGS_DIR=/fast/najroldi/logs/algoperf
EXE=/home/najroldi/algorithmic-efficiency/script/lawa/eval_ckpt/run.sh

workload=criteo1tb
framework=pytorch

## NadamW
submission=prize_qualification_baselines/external_tuning/pytorch_nadamw_target_setting.py
